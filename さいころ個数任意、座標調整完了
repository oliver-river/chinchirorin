from vpython import*
import random
autoscale = False
#n=int(input())
n=15

di=[]
for i in range (n):
    a=random.randint(1,6)

    di.append(a)    
    
    
for i in range (n):
  #  box(pos=vector(-11+11*i-11,0,0),length=10,width=1,height=10,color=color.white)
