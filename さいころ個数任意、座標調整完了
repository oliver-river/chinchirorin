        cylinder(pos=vector(-2.5+11*i-11-5.5*(n-3),2.5,0),axis=vector(0,0,1),radius=1,color=color.black)  

    elif  di[i]==5:


        cylinder(pos=vector(0+11*i-11-5.5*(n-3),0,0),axis=vector(0,0,1),radius=1,color=color.black)
        cylinder(pos=vector(2.5+11*i-11-5.5*(n-3),-2.5,0),axis=vector(0,0,1),radius=1,color=color.black)
        cylinder(pos=vector(2.5+11*i-11-5.5*(n-3),2.5,0),axis=vector(0,0,1),radius=1,color=color.black)

